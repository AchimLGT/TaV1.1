local iup = require("iup")

-- Function to handle button click
local function on_button_click()
    label.title = "Hello, GUI!"
end

-- Create a label widget
local label = iup.label{
    title = "Click the button below!",
    padding = "20x20"
}

-- Create a button widget
local button = iup.button{
    title = "Click Me!",
    action = on_button_click
}

-- Create a horizontal box to arrange widgets
local hbox = iup.hbox{
    label,
    button,
    alignment = "ACENTER",
    margin = "20x20",
}

-- Create a dialog containing the box layout
local dlg = iup.dialog{
    hbox,
    title = "Simple GUI Example",
    size = "300x100",
    margin = "20x20",
}

-- Show the dialog and start the main loop
dlg:showxy(iup.CENTER, iup.CENTER)
iup.MainLoop()
